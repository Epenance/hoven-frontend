---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import Hero from "../components/spots/Hero.astro";
import TextAndImage from "../components/spots/TextAndImage.astro";
import CtaBanner from "../components/spots/CtaBanner.astro";


export async function getStaticPaths() {
    const pages = [
        {
            slug: undefined,
            title: "Astro Store",
            text: "Welcome to the Astro store!",
        },
        {
            slug: "products",
            title: "Astro products",
            text: "We have lots of products for you",
        },
        {
            slug: "products/astro-handbook",
            title: "The ultimate Astro handbook",
            text: "If you want to learn Astro, you must read this book.",
        },
    ];
    return pages.map(({ slug, title, text }) => {
        return {
            params: { slug },
            props: { title, text },
        };
    });
}

const { title, text } = Astro.props;
---

<Layout>
    <div class="spots">
        <Hero></Hero>
        <TextAndImage></TextAndImage>
        <TextAndImage reverse></TextAndImage>
        <CtaBanner></CtaBanner>
    </div>

    <h1 class="text-3xl font-bold underline">{title}</h1>
    <p>{text}</p>
</Layout>
