---
import { StrapiBlocks } from '@sensinum/astro-strapi-blocks';
const { Text } = Astro.props;
---

<div class="container mx-auto mb-12 p-5 md:p-0">
    <div class="w-full px-12
     flex
     rounded-xl
     p-10
     bg-jagt min-h-160 bg-center bg-cover bg-no-repeat bg-[url(https://plus.unsplash.com/premium_photo-1661819541230-034d07819c9b?q=80&w=2672&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)]">
        <div class="flex justify-center flex-col md:w-2/4">
            <div class="text-white text-lg mt-4">
                {<StrapiBlocks data={Text} theme={{
                    extend: {
                        heading: {
                            h1: ["uppercase text-white font-bold md:text-7xl text-4xl"]
                        },
                        paragraph: {
                            link: ['rounded-sm uppercase font-bold bg-jagt hover:bg-jagt-500 py-4 px-8 text-white inline-block']
                        }
                    }
                }} />}
            </div>
        </div>
    </div>
</div>

