---
import logo from '../assets/logo.png';
---

<footer class="bg-jagt text-white pt-16">
  <div class="container mx-auto px-6">
    <!-- Get In Touch Section -->
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">Kontakt os</h2>
      <p class="text-jagt-50 max-w-2xl mx-auto">
        Spørgsmål om jagt, medlemskab eller arrangementer? Vi er her for at hjælpe dig!
      </p>
    </div>

    <!-- Contact Information Grid -->
    <div class="grid md:grid-cols-3 gap-8 mb-12">
      <!-- Call Us -->
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center">
          <svg class="w-8 h-8 text-jagt-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Ring til os</h3>
        <p class="text-lg font-normal mb-1">+45 30242423</p>
        <!--<p class="text-jagt-50 text-sm">Mon-Fri 9AM-6PM</p>-->
      </div>

      <!-- Email Us -->
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center">
          <svg class="w-8 h-8 text-jagt-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Skriv til os</h3>
        <p class="text-lg font-normal mb-1">soren@heimdaljagt.dk</p>
        <!--<p class="text-jagt-50 text-sm">Response within 24 hours</p>-->
      </div>

      <!-- Visit Us -->
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center">
          <svg class="w-8 h-8 text-jagt-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Besøg os</h3>
        <p class="text-lg font-normal mb-1">Hulmosevej 10</p>
        <p class="text-lg font-normal mb-1">6880 Tarm</p>
        <p class="text-jagt-50 text-sm">Åben hver søndag 11:00-15:00</p>
      </div>
    </div>

    <!-- Schedule a Visit Button -->
    <div class="text-center">
      <button class="bg-jagt-200 cursor-pointer hover:bg-jagt-500 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200">
        Bliv medlem
      </button>
    </div>
  </div>

  <!-- Hunters Union Branding -->
  <div class="bg-jagt-600 text-center pt-8 pb-8 mt-16">
    <div class="container mx-auto px-6">
      <div class="flex items-center justify-center mb-4">
        <img src={logo.src} alt="Hunters Union Logo" class="w-8 h-8 mr-3" />
        <span class="text-xl font-semibold">Hoven Jagtforening</span>
      </div>
      <p class="text-jagt-50 mb-4">
        Traditionsfuld jagtforening med fokus på fællesskab og gode oplevelser.
      </p>
      <p class="text-jagt-100 text-sm">
        © 2025 Hoven Jagtforening. All rights reserved.
      </p>
    </div>
  </div>
</footer>
